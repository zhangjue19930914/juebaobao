M.add("uix-smoothscroll",function(a){function b(b,c){if(b=a.one(b)){var d={trigger:"a",extraNode:"",extraNodeSign:1,extraPx:0,easing:"easeOutStrong",scrollBox:a.config.win};c=a.merge(d,c||{}),b.delegate("click",function(b){b.preventDefault();var d=a.one(c.scrollBox)||a.one(a.config.win),e=this.getData("scroll"),f=e&&a.one(e),g=a.one(c.extraNode),h=0,i=0,j=0;if(f)if(d===a.one(a.config.win))h=f.getY();else{if(!f.ancestor(c.scrollBox))return;var k="static"!==d.getStyle("position");k||d.setStyle("position","relative");var l=f.get("offsetParent");for(h+=f.get("offsetTop");l&&l!==d;)h+=l.get("offsetTop"),l=l.get("offsetParent");if(l!==d)return;k||d.setStyle("position","static")}else if(e){var m=e.match(/^(\d+)(px)?$/i);m&&a.Lang.isNumber(Number(m[1]))&&(h=Number(m[1]))}g&&6!==a.UA.ie&&(j=c.extraNodeSign*g.get("offsetHeight")),h+=j+c.extraPx,i=Math.abs(h-d.get("scrollTop")),a.UA.ie&&a.UA.ie<9?d.set("scrollTop",h):new a.Anim({node:d,duration:a.mt.lang.clamp(i/1e3,.2,.6),to:{scroll:[0,h]},easing:c.easing?c.easing:"easeOutStrong"}).run()},c.trigger)}}a.namespace("mt.uix"),a.mt.uix.Smoothscroll=b},"1.0.0",{requires:["mt-base","anim","node"]});
M.add("uix-scrollspy",function(a){function b(b,c){var d,e,f=a.one("window"),g=0,h=[];e={offset:0,currentClass:"scroll-spy__item--current"},c=a.merge(e,c),b=a.one(b),b&&(d=b.all("[data-target]"),d&&0!==d.size()&&(a.on("domready",function(){try{d.item(g).addClass(c.currentClass)}catch(a){M._ERRORS&&M._ERRORS.push(a)}}),f.on(["scroll","resize"],a.mt.util.throttle(function(){var b,e=f.get("docScrollY"),i=-1;h=[],d.each(function(b){var c=a.one(b.getData("target"));h.push(c.getY())}),b=h.length;for(var j=b-1;j>=0;j--)if(h[j]<=e){i=j;break}i!==g&&(d.removeClass(c.currentClass),i>=0?d.item(i).addClass(c.currentClass):d.item(0).addClass(c.currentClass)),g=i},10))))}a.namespace("mt.uix"),a.mt.uix.Scrollspy=b},"1.0.0",{requires:["mt-base","node"]});